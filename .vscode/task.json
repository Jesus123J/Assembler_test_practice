{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/main.exe",
                "-I", "C:/MySQL/MySQL Connector C++ 8.4/include",
                "-L", "C:/MySQL/MySQL Connector C++ 8.4/lib64",
                "-lmysqlclient",
                "-static-libgcc",
                "-static-libstdc++"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
